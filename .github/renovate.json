{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "enabledManagers": [
    "custom.regex",
    "dockerfile",
    "github-actions",
    "nix"
  ],
  "nix": {
    "enabled": true
  },
  "ignorePaths": [
    "/results/**"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Flake dependencies",
      "managerFilePatterns": [
        "/flake\\.nix$/"
      ],
      "matchStrings": [
        "renovate = \\[\"(?<depName>.+?)\" \"(?<currentValue>.+?)\"( \"(?<currentDigest>.+?)\")?\\]; # (?<datasource>\\S+)"
      ],
      "extractVersionTemplate": "^v?(?<version>.*)$"
    }
  ],
  "packageRules": [
    {
      "description": [
        "Merge GitHub actions updates"
      ],
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true
    }
  ]
}
